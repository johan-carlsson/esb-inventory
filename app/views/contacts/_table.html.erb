<% contacts||=@contacts %>
<% table_options||={} %>

<%= redpill_table(contacts,table_options) do |table| 
	table.add_column(:name => :name,:width => "25%") { |o| link_to(o.name, polymorphic_url(o)) }
  table.add_column(:name => :email, :width => "25%",&:email)
  table.add_column(:name => :phone, :width => "25%",&:phone)
  table.add_column(:name => :mobile, :width => "25%",&:mobile)
	table.row_linker { |o| polymorphic_url(o) }
end %>
