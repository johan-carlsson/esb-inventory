<% remote ||= false %>
<% dom_id = if  @contact.new_record?
	"new_service"
else
	dom_id(@contact)
end
%>

<%= redpill_tabular_form(@contact,{:object_name => 'contact'},{:remote => remote}) do |f| %> 
	<%= f.text_field :name %>	
  <%= f.text_field :email %>	 
	
	<%= f.text_field :phone %>	
  <%= f.text_field :mobile %>	 

  <%= f.text_area :tag_list,{:title => "Use comma to separate tags", :cols => 27, :rows => 3} %>
	<%= f.submit_and_cancel_buttons %>
<% end %>
