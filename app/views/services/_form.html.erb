<% remote ||= false %>
<% dom_id = if  @service.new_record?
	"new_service"
else
	dom_id(@service)
end
%>

<%= redpill_tabular_form(@service,{:object_name => 'service'},{:remote => remote}) do |f| %> 
	<%= f.text_field :name %>	
 <%= f.text_field :category %>	 
  <%= f.text_field :provider_name, data: {autocomplete_source: Provider.order(:name).map(&:name)} %>
  <%= f.text_area :tag_list,{:title => "Use comma to separate tags", :cols => 27, :rows => 3} %>
	<%= f.submit_and_cancel_buttons %>
<% end %>
