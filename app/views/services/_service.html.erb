<% service||=@service %>
<% hide_toolbar||=false %>

<%= div_for(service,:class => 'show') do %>
<table class="show" width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
	  <th><%= "Name" %>:</th>
		<td><%= service.name %></td>
	  <th><%= "Category" %>:</th>
		<td><%= service.category %></td>
	</tr>
  <tr>
    <th><%= "Provider" %></th> 
    <td><%=  link_to(service.provider,provider_url(service.provider)) if service.provider %> </td>
  </tr>
</table>

<div class="additional_information" style="display:none">
	<table class="show" width="100%" border="0" cellspacing="0" cellpadding="0">

		<%# <%= render :partial => "shared/tag_and_description", :locals => {:record => @membership} %1> %>

		<%= render :partial => "shared/userstamp", :locals => {:record => @service} %>

	</table>
</div>

<%= render :partial => 'shared/additional_information_buttons' %>

<%= render :partial => 'shared/object_toolbar' , :locals => {:controller_name => service.class.to_s.pluralize.downcase, :id => service.id} %>

<% end %>
