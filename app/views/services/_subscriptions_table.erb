<% subscriptions||=@subscriptions %>
<% table_options||={} %>

<%= redpill_table(subscriptions,table_options) do |table| 
  table.add_column(:name => "Client",:order => "client", :width =>"50%") { |o| o.client_id}
  table.add_column(:name => "Client since",:order => "starts_at", :width =>"50%") { |o| o.starts_at}
  table.row_linker { |o| client_url(o.client_id) }
end %>

