<% roles||=@roles %>
<% table_options||={} %>

<%= redpill_table(roles,table_options) do |table| 
  table.add_column(:name => :contact,:order => "contact", :width => "33%") { |o| link_to(o.contact, contact_url(o.contact)) }
  table.add_column(:name => :email,:order => "email", :width => "33%",&:email) 
  table.add_column(:name => :role,:order => "name", :width => "33%") do |r|
    if r.inherited?
      "#{r.name} on #{r.on} system"
    else
      r.name
    end
  end
  table.row_linker { |o| contact_url(o.contact) }
  table.row_class { |o| o.inherited? && "inherited"}
end %>
