<% remote ||= false %>
<% dom_id = if  @provider.new_record?
	"new_service"
else
	dom_id(@provider)
end
%>

<%= redpill_tabular_form(@provider,{:object_name => 'provider'},{:remote => remote}) do |f| %> 
	<%= f.text_field :name %>	
  <%= f.text_field :identifier %>	 
  <%= f.text_area :tag_list,{:title => "Use comma to separate tags", :cols => 27, :rows => 3} %>
	
	<%= f.submit_and_cancel_buttons %>
<% end %>
