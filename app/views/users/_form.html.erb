<% remote ||= false %>
<% dom_id = if  @user.new_record?
	"new_service"
else
	dom_id(@user)
end
%>

<%= redpill_tabular_form(@user,{:object_name => 'user'},{:remote => remote}) do |f| %> 
	<%= f.text_field :name %>	
 <%= f.password_field :password %>	 
 <%= f.password_field :password_confirmation %>	 
	
	<%= f.submit_and_cancel_buttons %>
<% end %>


