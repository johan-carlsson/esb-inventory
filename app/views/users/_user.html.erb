<% user||=@user %>
<% hide_toolbar||=false %>

<%= div_for(user,:class => 'show') do %>
<table class="show" width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
	  <th><%= "Name" %>:</th>
		<td><%= user.name %></td>
		 <th></th>
		<td></td>
	</tr>
</table>

<%= render :partial => 'shared/additional_information', :locals => {:record => @user} %>



<%= render :partial => 'shared/object_toolbar' , :locals => {:controller_name => user.class.to_s.pluralize.downcase, :id => user.id} %>

<% end %>
