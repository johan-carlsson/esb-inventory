<% remote ||= false %>
<% dom_id = if  @subscription.new_record?
	"new_service"
else
	dom_id(@subscription)
end
%>

<%= redpill_tabular_form([@service,@subscription],{:object_name => 'subscription'},{:remote => remote}) do |f| %> 
  <%= f.text_field :consumer_name, data: {autocomplete_source: Consumer.order(:name).map(&:name)}  %>	 
  <%= f.empty_column %>
  <%= f.text_field :starts_at, :class => "datepicker" %>
  <%= f.text_field :ends_at, :class => "datepicker" %>	
  <%= f.text_area :tag_list,{:title => "Use comma to separate tags", :cols => 27, :rows => 3} %>
	<%= f.submit_and_cancel_buttons %>
<% end %>
