<% consumer||=@consumer %>
<% properties||=consumer.properties %>
<% hide_toolbar||=false %>

<%= div_for(consumer,:class => 'show') do %>
<table class="show" width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
	  <th><%= "Name" %>:</th>
		<td><%= consumer.name %></td>
	  <th><%= "Id" %>:</th>
		<td><%= consumer.identifier %></td>
	</tr>
	<tr>
	  <th><%= "Provider" %>:</th>
    <td><%= consumer.provider && link_to(consumer.provider,provider_path(consumer.provider))%></td>
    <th></th>
    <td></td>
	</tr>
</table>

<%= render :partial => 'shared/additional_information', :locals => {:properties => properties} %>

<%= render :partial => 'shared/object_toolbar' , :locals => {:controller_name => consumer.class.to_s.pluralize.downcase, :id => consumer.id} %>

<% end %>
