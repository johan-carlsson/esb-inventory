
<div id="edit_readme" class="edit">
  <span>Use Asciidoc to format. <a href="http://asciidoctor.org/docs/asciidoc-writers-guide/" target="_blank">Learn how
</a>
  </span>
<%= form_for(@readme,:url => consumer_update_readme_path(@consumer), :method => :put) do |f| %>
  <%= f.text_area :text, :cols => 80, :rows => 50 %>
    <div>
      <%= f.submit "Save"  %>
      <%= f.button "Cancel", :onclick => "window.location = \"#{consumer_readme_path(@consumer)}\";return false" %>
    </div>
<% end %>
</div>
