<div id="page">
  <fieldset>
    <legend>Login</legend>
    <%= form_tag sessions_path do -%>
    <p><label for="name">Name</label><br/>

      <%= text_field_tag :name, params[:name] %></p>
    <p><label for="password">Password</label><br/>
    <%= password_field_tag 'password' %></p>

    <p><%= submit_tag 'Enter' %></p>
    <% end -%>
  </fieldset>
</div>


