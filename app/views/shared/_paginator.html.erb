<% collection||=[] %>
<%= redpill_toolbar do |toolbar| %>
  <% if !collection.empty? %>    
    <%= toolbar.item({:class => :left, :tooltip => "#{shortcut_modifier}-," },
								               {:method => :get, :url => {:params => params.merge({:page => collection.previous_page})} }, 
										           {:href => url_for(:params => params.merge({:page => collection.previous_page})), 
										           :title => "#{shortcut_modifier}-," ,:accesskey => ","}, collection.previous_page.blank?) %>
		
    <%= toolbar.item({:class => :right, :tooltip => "#{shortcut_modifier}-." },
								               {:method => :get, :url => {:params => params.merge({:page => collection.next_page})} }, 
										           {:href => url_for(:params => params.merge({:page => collection.next_page})),
										           :title => "#{shortcut_modifier}-." , :accesskey => "."}, collection.next_page.blank?) %>

		<%= toolbar.text(paginator_text(collection),:id => :paginator_text) %>

	<% else %>
	  <%= toolbar.disabled_item(:class => "left") %>
	  <%= toolbar.disabled_item(:class => "right") %>
	<% end %>
	
<% end %>

