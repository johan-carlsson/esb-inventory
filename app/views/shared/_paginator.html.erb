<% pages||=[] %>
<%= redpill_toolbar do |toolbar| %>
  <% if !pages.empty? %>    
    <%= toolbar.item({:class => :left, :tooltip => "#{shortcut_modifier}-," },
								               {:method => :get, :url => {:params => params.merge({:page => pages.previous_page_number})} }, 
										           {:href => url_for(:params => params.merge({:page => pages.previous_page_number})), 
										           :title => "#{shortcut_modifier}-," ,:accesskey => ","}, pages.previous_page_number.blank?) %>
		
    <%= toolbar.item({:class => :right, :tooltip => "#{shortcut_modifier}-." },
								               {:method => :get, :url => {:params => params.merge({:page => pages.next_page_number})} }, 
										           {:href => url_for(:params => params.merge({:page => pages.next_page_number})),
										           :title => "#{shortcut_modifier}-." , :accesskey => "."}, pages.next_page_number.blank?) %>

		<%= toolbar.text(paginator_text(pages),:id => :paginator_text) %>

	<% else %>
	  <%= toolbar.disabled_item(:class => "left") %>
	  <%= toolbar.disabled_item(:class => "right") %>
	<% end %>
	
<% end %>

