<% name||=controller.action_name %>
<% show_csv_export_button=@show_csv_export_button %>

<% name.downcase! %>
<% image ||=  "sidebar/#{name.gsub(" ","_")}.png" %>
<%= redpill_toolbar do |toolbar| %>
  <%= toolbar.image(image) %>
  <%= toolbar.text(name.titlecase) %>
  <% if show_csv_export_button %>									
    <%= toolbar.item({:class => :export, :tooltip => "Export %s csv" % name },
                     {:format => :csv},
                     {},
                     @csv_export_button_disabled) %>
 <% end %>

<% end %>



