<% controller_name ||= controller.controller_name %>
<% id ||= params[:id] %>
<% name||=controller_name %>

<div id="object_toolbar">

	<%= redpill_toolbar do |toolbar| %>
		<%= toolbar.image("sidebar/#{name}.png") %>
		<%= toolbar.text(name.singularize.titlecase) %>

		<%= toolbar.item({:class => :edit, :tooltip => "Edit" + ' ' + name.singularize + " (#{shortcut_modifier}-e)" },
		{:action => "edit", :controller => controller_name, :id => id},
		{:accesskey => "E"} ,@edit_button_disabled) %>

		<%= toolbar.item({:class => :delete, :tooltip => "Delete" + ' ' + name.singularize + " (#{shortcut_modifier}-d)" },
		{:action => "destroy", :controller => controller_name, :id => id},
		{:confirm => 'Are you sure you wish to delete this %s?' % name.singularize,:accesskey => "D", :method => :delete} ,@edit_button_disabled) %>
		
		<%= toolbar.item({:class => :table,:tooltip  => "List" + ' ' + name.to_s  + " (#{shortcut_modifier}-l)"},
		{:action => "index",  :controller => controller_name,:use_saved_parameters => true },{ :accesskey => "L"},@list_button_disabled) %>
	<% end %>
</div>
