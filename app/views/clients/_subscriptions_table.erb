<% subscriptions||=@subscriptions %>
<% table_options||={} %>

<%= redpill_table(subscriptions,table_options) do |table| 
  table.add_column(:name => "Integration",:order => "integration", :width =>"30%") { |o| o.integration.name}
  table.add_column(:name => "Client since",:order => "starts_at",:width =>"20%") { |o| o.starts_at}
  table.add_column(:name => "Client to",:order => "ends_at",:width =>"20%") { |o| o.ends_at}
  table.add_column(:name => "Debit system",:order => "debit_system",:width =>"20%") { |o| o.debit_system}
  table.row_class { |o| o.ended? && "inactive"}
  table.row_linker { |o| integration_url(o.integration_id) }
end %>
