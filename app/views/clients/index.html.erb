<% clients||=@clients%>
<% pages||=PaginationHelper.pages(clients,params) %>
<% content_for :window_header do %>
<%= if controller.action_name == "index"
	"clients"
	else
		controller.action_name.titleize
end %>
<% end %>

<div id="result">
  <%= render :partial => 'shared/table_toolbar', :locals => {:collection => clients, :show_csv_export_button => true, :pages => pages} %>
	<div id="table">
    <%= render :partial => "table", :locals => {:clients => pages.current_page} %>	
	</div>
</div>
