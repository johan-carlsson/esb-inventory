<table class="show" width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
	  <th><%= "Contact" %>:</th>
		<td><%= link_to(provider_contact.contact,contact_url(provider_contact.contact)) %></td>
	  <th><%= "Provider" %>:</th>
		<td><%= link_to(provider_contact.provider,provider_url(provider_contact.provider)) %></td>
  </tr>
  <tr>
	  <th><%= "Role" %>:</th>
		<td><%= provider_contact.role %></td>
    <th></th>
    <td></td>
	</tr>
 </table>

<%= render :partial => 'object_toolbar'  %>

<% end %>
